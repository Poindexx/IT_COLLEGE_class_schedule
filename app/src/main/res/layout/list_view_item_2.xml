<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        android:backgroundTint="#98C3EE"
        android:alpha="0.7">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tvGroup"
            android:layout_width="220dp"
            android:layout_height="17dp"
            android:layout_below="@id/tvMugalim"
            android:layout_marginTop="0.5dp"
            android:layout_toStartOf="@id/tvUakit"
            android:layout_toEndOf="@id/tvKobinet1"
            android:background="@drawable/btn_log5"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="ВТиПО"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tvPar"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_log5"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvKobinet1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/tvPar"
            android:background="@drawable/btn_log5"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="505"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSabak"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:scrollbars = "vertical"
            android:layout_toStartOf="@id/tvUakit"
            android:layout_toEndOf="@id/tvKobinet1"
            android:background="@drawable/btn_log5"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Қазақ тілі және экономтка негіздері"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tvMugalim"
            android:layout_width="220dp"
            android:layout_height="17dp"
            android:scrollbars = "vertical"
            android:layout_below="@+id/tvSabak"
            android:layout_toStartOf="@id/tvUakit"
            android:layout_toEndOf="@id/tvKobinet1"
            android:background="@drawable/btn_log5"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Ахмет Баян"
            android:textColor="@color/colorBlack" />


        <TextView
            android:id="@+id/tvUakit"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="@drawable/btn_log5"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="13:30-15:00"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>