<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="false"
    android:paddingTop="1dp">


    <TextView
        android:id="@+id/tvPar"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:background="@drawable/btn_log5"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvKobinet1"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_log5"
        android:fontFamily="serif"
        android:layout_toRightOf="@id/tvPar"
        android:gravity="center"
        android:text="505"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />


        <TextView
            android:id="@+id/tvSabak"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_log5"
            android:fontFamily="serif"
            android:layout_toRightOf="@id/tvKobinet1"
            android:gravity="center"
            android:layout_toLeftOf="@id/tvUakit"
            android:text="Қазақ тілі және экономтка негіздері"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tvGroup"
            android:layout_width="220dp"
            android:layout_height="18dp"
            android:layout_toRightOf="@id/tvKobinet1"
            android:layout_marginTop="1dp"
            android:background="@drawable/btn_log5"
            android:fontFamily="serif"
            android:layout_below="@+id/tvSabak"
            android:gravity="center"
            android:layout_toLeftOf="@id/tvUakit"
            android:text="ВТиПО"
            android:textColor="@color/colorWhite" />


    <TextView
        android:id="@+id/tvUakit"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginEnd="2dp"
        android:background="@drawable/btn_log5"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="13:30-15:00"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

</RelativeLayout>