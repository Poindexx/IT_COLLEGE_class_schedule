<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#3F51B5</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="windowFixedHeightMajor">345dp</item>
        <item name="windowFixedWidthMinor">340dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:windowBackground">@drawable/sing2</item>
    </style>
    <style name="MyDialog1" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="windowFixedHeightMajor">280dp</item>
        <item name="windowFixedWidthMinor">340dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:windowBackground">@drawable/sing3</item>
    </style>
    <style name="MyDialog2" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="windowFixedHeightMajor">475dp</item>
        <item name="windowFixedWidthMinor">340dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:windowBackground">@drawable/sing4</item>
    </style>

    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Button_neg" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">25sp</item>
        <item name="background">@drawable/btn_log5</item>
    </style>

    <style name="SplashScren" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>
</resources>
